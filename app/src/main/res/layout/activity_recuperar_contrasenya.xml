<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/ellipse_1"
            android:layout_width="333dp"
            android:layout_height="253dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-240dp"
            android:layout_marginTop="-150dp"
            android:background="@drawable/elipse2" />

        <View
            android:id="@+id/elipse"
            android:layout_width="158dp"
            android:layout_height="123dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-65dp"
            android:layout_marginTop="-85dp"
            android:background="@drawable/elipse" />

        <TextView
            android:id="@+id/textOlvidar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppins_regular"
            android:fontWeight="400"
            android:gravity="center"
            android:text="@string/olvido_su_contrasenya"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textAyudar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textOlvidar"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_bold"
            android:fontWeight="400"
            android:gravity="center"
            android:text="@string/dejenos_ayudarle"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/editCorreo"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_below="@id/textAyudar"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/rounded_edittext_inicio_sesion"
            android:drawableLeft="@drawable/email_icon_v3"
            android:drawablePadding="20dp"
            android:fontFamily="@font/poppins_regular"
            android:fontWeight="400"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textInformacion"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/editCorreo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_regular"
            android:fontWeight="400"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="-2sp"
            android:text="@string/informacion"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/buttonEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInformacion"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_bold"
            android:fontWeight="400"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/enviar"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="normal" />

    </RelativeLayout>


</ScrollView>