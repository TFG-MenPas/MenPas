<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <include
        android:id="@+id/banner"
        layout="@layout/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--José Luis -->
            <TextView
                android:id="@+id/textAutores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_bold"
                android:fontWeight="700"
                android:gravity="center"
                android:text="@string/autores"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textCoordinador1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textAutores"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/coordinador"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textJoseLuis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textAutores"
                android:layout_marginRight="20dp"
                android:layout_toEndOf="@id/textCoordinador1"
                android:fontFamily="@font/poppins_light"
                android:text="@string/jose_luis"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textEmailJoseLuis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textCoordinador1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/email_jose_luis"
                android:textColor="@color/light_blue"
                android:textSize="14dp"
                android:textStyle="normal" />

            <!--Antonio Hernández -->

            <TextView
                android:id="@+id/textCoordinador2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textEmailJoseLuis"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/coordinador"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textAntonio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textEmailJoseLuis"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_toEndOf="@id/textCoordinador2"
                android:fontFamily="@font/poppins_light"
                android:text="@string/antonio_hernandez"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textEmailAntonio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textCoordinador2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/email_antonio"
                android:textColor="@color/light_blue"
                android:textSize="14dp"
                android:textStyle="normal" />

            <!--Desarrolladores -->

            <TextView
                android:id="@+id/textDesarrolladores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textEmailAntonio"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/desarrolladores"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textManuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textDesarrolladores"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/manuel_gomez"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textEmailManuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textManuel"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/email_manuel_gomez"
                android:textColor="@color/light_blue"
                android:textSize="14dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textDaniel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textEmailManuel"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/daniel_melero"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textEmailDaniel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textDaniel"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/email_daniel_melero"
                android:textColor="@color/light_blue"
                android:textSize="14dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textMiguel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textEmailDaniel"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/miguel_cabanillas"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textEmailMiguel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textMiguel"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/email_miguel_cabanillas"
                android:textColor="@color/light_blue"
                android:textSize="14dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textFrancisco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textEmailMiguel"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/francisco_bono"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textEmailFrancisco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textFrancisco"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/email_francisco_bono"
                android:textColor="@color/light_blue"
                android:textSize="14dp"
                android:textStyle="normal" />

        </RelativeLayout>
    </ScrollView>

    <include
        android:id="@+id/menu_navegacion_inferior"
        layout="@layout/menu_navegacion_inferior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>