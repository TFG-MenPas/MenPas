<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/imageNovedades"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/novedades_icon"
        android:contentDescription="@string/icono_novedades" />

    <TextView
        android:id="@+id/textNovedades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageNovedades"
        android:layout_toEndOf="@id/imageNovedades"
        android:fontFamily="@font/poppins_bold"
        android:fontWeight="700"
        android:text="@string/novedades"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal" />
</RelativeLayout>