<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <include
        android:id="@+id/banner"
        layout="@layout/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textSolicitudDeAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_bold"
        android:fontWeight="700"
        android:gravity="center"
        android:text="@string/solicitud_de_admin"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="normal" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/banner"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3.5dp"
        android:background="@color/line_grey"
        android:orientation="horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textSolicitudDeAdmin"
        android:layout_marginBottom="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/RLCuestionariosNecesarios"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:minWidth="25px"
                android:minHeight="25px">

                <EditText
                    android:id="@+id/ETCuestionariosNecesarios"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/line_grey"
                    android:fontFamily="@font/poppins_regular"
                    android:fontWeight="400"
                    android:hint="@string/cuestionarios_necesarios"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:textSize="14sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/RLTituloInvestigacion"
                android:layout_width="match_parent"

                android:layout_height="60dp"
                android:layout_below="@id/RLCuestionariosNecesarios"
                android:minWidth="25px"
                android:minHeight="25px">

                <EditText
                    android:id="@+id/ETTituloInvestigacion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/line_grey"
                    android:fontFamily="@font/poppins_regular"
                    android:fontWeight="400"
                    android:hint="@string/titulo_investigacion"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="14sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/RLEstimacionParticipantesMuestra"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/RLTituloInvestigacion"
                android:minWidth="25px"
                android:minHeight="25px">

                <EditText
                    android:id="@+id/ETEstimacionParticipantesMuestra"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/line_grey"
                    android:fontFamily="@font/poppins_regular"
                    android:fontWeight="400"
                    android:hint="@string/estimacion_participantes_muestra"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RLDuracionEstimadaInvestigacion"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/RLEstimacionParticipantesMuestra"
                android:minWidth="25px"
                android:minHeight="25px">

                <EditText
                    android:id="@+id/ETDuracionEstimadaInvestigacion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/line_grey"
                    android:fontFamily="@font/poppins_regular"
                    android:fontWeight="400"
                    android:hint="@string/duracion_estimada_investigacion"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RLTipoPublicacion"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/RLDuracionEstimadaInvestigacion"
                android:minWidth="25px"
                android:minHeight="25px">

                <EditText
                    android:id="@+id/ETTipoPublicacion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/line_grey"
                    android:fontFamily="@font/poppins_regular"
                    android:fontWeight="400"
                    android:hint="@string/tipo_publicacion"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RLMotivo"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@id/RLTipoPublicacion"
                android:minWidth="25px"
                android:minHeight="25px">

                <EditText
                    android:id="@+id/ETMotivo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/line_grey"
                    android:fontFamily="@font/poppins_regular"
                    android:fontWeight="400"
                    android:hint="@string/motivo"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:maxLines="5"
                    android:minLines="1"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:gravity="top|left"
                    android:scrollbars="vertical"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RLObservaciones"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@id/RLMotivo"
                android:minWidth="25px"
                android:minHeight="25px">

                <EditText
                    android:id="@+id/ETObservaciones"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/line_grey"
                    android:fontFamily="@font/poppins_regular"
                    android:fontWeight="400"
                    android:hint="@string/observaciones"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:maxLines="5"
                    android:minLines="1"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:gravity="top|left"
                    android:scrollbars="vertical"
                    android:textSize="14sp" />

            </RelativeLayout>

            <Button
                android:id="@+id/buttonEnviar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/RLObservaciones"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button"
                android:fontFamily="@font/poppins_bold"
                android:fontWeight="400"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/enviar"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="normal" />


        </RelativeLayout>

    </ScrollView>

    <include
        android:id="@+id/menu_navegacion_inferior"
        layout="@layout/menu_navegacion_inferior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
