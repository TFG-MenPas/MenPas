<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/geometrical_banner" />

    <ImageView
        android:id="@+id/art_banner"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textBienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:text="@string/bienvenido_principal"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        />
    <!-- Hasta 18 en tlf fran caracteres caben en el nombre -->
    <TextView
        android:id="@+id/textNombreUsuario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textBienvenido"
        android:layout_alignBottom="@+id/banner"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        android:layout_toStartOf="@+id/art_banner"
        android:fontFamily="@font/poppins_bold_italic"
        android:maxLines="1"
        android:text="Miguel157000"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/banner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:id="@+id/nestedScrollMenuPrincipal"
        android:fillViewport="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:columnCount="2"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/autorregistro"
                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="150dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="30dp"
                android:layout_marginTop="10dp"
                android:translationZ="5dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/autorregistro"
                    android:textColor="@color/dark_blue"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/art_autorregistro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="40dp"
                    android:src="@drawable/art_autorregistro" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/autoconcepto"
                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="150dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="30dp"
                android:translationZ="5dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/autoconcepto"
                    android:textColor="@color/dark_blue"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/art_autoconcepto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="40dp"
                    android:src="@drawable/art_autoconcepto" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/busqueda_talentos"
                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="150dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="30dp"
                android:translationZ="5dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/busqueda_talentos"
                    android:textColor="@color/dark_blue"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/art_busquedatalentos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:src="@drawable/art_busquedatalentos" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/dinamicagrupal"
                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="150dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="30dp"
                android:translationZ="5dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dinamica_grupal"
                    android:textColor="@color/dark_blue"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="17sp"/>
                <ImageView
                    android:id="@+id/art_dinamicagrupal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:src="@drawable/art_dinamicagrupal" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/inteligencia_emocional"
                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="150dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="30dp"
                android:translationZ="5dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/inteligencia_emocional"
                    android:textColor="@color/dark_blue"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="13sp"/>
                <ImageView
                    android:id="@+id/art_inteligenciaemocional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:src="@drawable/art_inteligenciaemocional" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ansiedad"
                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="150dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="30dp"
                android:translationZ="5dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ansiedad"
                    android:textColor="@color/dark_blue"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20dp"/>
                <ImageView
                    android:id="@+id/art_ansiedad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="40dp"
                    android:src="@drawable/art_ansiedad" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/atencion"
                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="150dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="30dp"
                android:translationZ="5dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/atencion"
                    android:textColor="@color/dark_blue"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/art_atencion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="40dp"
                    android:src="@drawable/art_atencion" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/burnout"
                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="150dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="30dp"
                android:translationZ="5dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/burnout"
                    android:textColor="@color/dark_blue"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/art_burnout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:src="@drawable/art_burnout" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/calidadvida"
                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="150dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="30dp"
                android:translationZ="5dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/Calidadvida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/calidad_vida"
                    android:textColor="@color/dark_blue"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/art_calidadvida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:src="@drawable/art_calidadvida" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/entrenamiento_mental"
                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="150dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="30dp"
                android:translationZ="5dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/EntrenamientoMental"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/entrenamiento_mental"
                    android:textColor="@color/dark_blue"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="13sp"/>
                <ImageView
                    android:id="@+id/art_entrenamientomental"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:src="@drawable/art_entrenamientomental" />
            </androidx.cardview.widget.CardView>
        </GridLayout>

    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/menu_navegacion_inferior"
        layout="@layout/menu_navegacion_inferior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>