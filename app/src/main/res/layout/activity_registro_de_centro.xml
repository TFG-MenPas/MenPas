<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <include
        android:id="@+id/banner"
        layout="@layout/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textRegistroDeCentro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_bold"
        android:fontWeight="700"
        android:gravity="center"
        android:text="@string/registro_de_centro"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="normal" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/banner"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3.5dp"
        android:background="@color/line_grey"
        android:orientation="horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textRegistroDeCentro"
        android:layout_marginBottom="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/RLNombreDelCentro"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:minWidth="25px"
                android:minHeight="25px">

                <EditText
                    android:id="@+id/editTextNombreCentro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_regular"
                    android:fontWeight="400"
                    android:hint="@string/nombre_del_centro"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:textSize="20sp"
                    android:backgroundTint="@color/line_grey"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/RLProvincia"
                android:layout_width="match_parent"

                android:layout_height="60dp"
                android:layout_below="@id/RLNombreDelCentro"
                android:minWidth="25px"
                android:minHeight="25px">

                <EditText
                    android:id="@+id/editTextProvincia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_regular"
                    android:fontWeight="400"
                    android:hint="@string/provincia"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="20sp"
                    android:backgroundTint="@color/line_grey"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/RLLocalidad"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/RLProvincia"
                android:minWidth="25px"
                android:minHeight="25px">

                <EditText
                    android:id="@+id/editTextLocalidad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_regular"
                    android:fontWeight="400"
                    android:hint="@string/localidad"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="20sp"
                    android:backgroundTint="@color/line_grey"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RLDireccion"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/RLLocalidad"
                android:minWidth="25px"
                android:minHeight="25px">

                <EditText
                    android:id="@+id/editTextDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_regular"
                    android:fontWeight="400"
                    android:hint="@string/direccion"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="20sp"
                    android:backgroundTint="@color/line_grey"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RLTelefono"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/RLDireccion"
                android:minWidth="25px"
                android:minHeight="25px">

                <EditText
                    android:id="@+id/editTextTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_regular"
                    android:fontWeight="400"
                    android:hint="@string/telefono"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="20sp"
                    android:backgroundTint="@color/line_grey"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RLCodigoPostal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/RLTelefono"
                android:minWidth="25px"
                android:minHeight="25px">

                <EditText
                    android:id="@+id/editTextCodigoPostal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_regular"
                    android:fontWeight="400"
                    android:hint="@string/codigo_postal"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="20sp"
                    android:backgroundTint="@color/line_grey"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RLPais"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/RLCodigoPostal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_marginTop="20dp">

                <Spinner
                    android:id="@+id/selectPais"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>

            <Button
                android:id="@+id/buttonRegistrarCentro"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/RLPais"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="25dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button"
                android:fontFamily="@font/poppins_bold"
                android:fontWeight="400"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/registrar_centro"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="normal" />


        </RelativeLayout>

    </ScrollView>

    <include
        android:id="@+id/menu_navegacion_inferior"
        layout="@layout/menu_navegacion_inferior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
