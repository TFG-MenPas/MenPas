<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".activities.EfectoStroop">
    <View
        android:id="@+id/bannerRectanguloAzul"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@color/azul_banner_cuestionarios" />

    <View
        android:id="@+id/ellipse_45"
        android:layout_width="230dp"
        android:layout_height="210dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-160dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/elipse_45" />

    <View
        android:id="@+id/ellipse_46"
        android:layout_width="170dp"
        android:layout_height="153dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-130dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/elipse_46" />


    <ImageButton
        android:id="@+id/imageButtonCerrarDesplegable"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#9CD3ED"
        android:contentDescription="@string/boton_cerrar_cuestionario"
        android:rotation="45"
        android:src="@drawable/icon_cruz" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="90sp"
        android:id="@+id/numeroPreguntaActual"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:textSize="30sp"

        android:text="@string/efecto_stroop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="102dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/button_rojo"
                        android:layout_width="150dp"
                        android:layout_marginEnd="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rounded_checkbox"
                        android:drawableEnd="@drawable/icon_checked"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/rojo"
                        android:textAlignment="textStart"
                        android:textColor="@color/dark_blue"
                        android:textSize="15sp"
                        android:textStyle="normal"

                        tools:ignore="RtlCompat" />
                    <Button
                        android:id="@+id/button_marron"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"

                        android:background="@drawable/rounded_checkbox"
                        android:drawableEnd="@drawable/icon_checked"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/marron"
                        android:textAlignment="textStart"
                        android:textColor="@color/dark_blue"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/button_verde"
                        android:layout_width="150dp"
                        android:layout_marginEnd="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rounded_checkbox"
                        android:drawableEnd="@drawable/icon_checked"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/verde"
                        android:textAlignment="textStart"
                        android:textColor="@color/dark_blue"
                        android:textSize="15sp"
                        android:textStyle="normal"

                        tools:ignore="RtlCompat" />
                    <Button
                        android:id="@+id/button_gris"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"

                        android:background="@drawable/rounded_checkbox"
                        android:drawableEnd="@drawable/icon_checked"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/gris"
                        android:textAlignment="textStart"
                        android:textColor="@color/dark_blue"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/button_azul"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/rounded_checkbox"
                        android:drawableEnd="@drawable/icon_checked"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/azul"
                        android:textAlignment="textStart"
                        android:textColor="@color/dark_blue"
                        android:textSize="15sp"
                        android:textStyle="normal"

                        tools:ignore="RtlCompat" />
                    <Button
                        android:id="@+id/button_rosa"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"

                        android:background="@drawable/rounded_checkbox"
                        android:drawableEnd="@drawable/icon_checked"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/rosa"
                        android:textAlignment="textStart"
                        android:textColor="@color/dark_blue"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/button_amarillo"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/rounded_checkbox"
                        android:drawableEnd="@drawable/icon_checked"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/amarillo"
                        android:textAlignment="textStart"
                        android:textColor="@color/dark_blue"
                        android:textSize="15sp"
                        android:textStyle="normal"

                        tools:ignore="RtlCompat" />
                    <Button
                        android:id="@+id/button_violeta"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"

                        android:background="@drawable/rounded_checkbox"
                        android:drawableEnd="@drawable/icon_checked"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/violeta"
                        android:textAlignment="textStart"
                        android:textColor="@color/dark_blue"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/button_negro"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/rounded_checkbox"
                        android:drawableEnd="@drawable/icon_checked"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/negro"
                        android:textAlignment="textStart"
                        android:textColor="@color/dark_blue"
                        android:textSize="15sp"
                        android:textStyle="normal"

                        tools:ignore="RtlCompat" />
                    <Button
                        android:id="@+id/button_fucsia"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"

                        android:background="@drawable/rounded_checkbox"
                        android:drawableEnd="@drawable/icon_checked"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/fucsia"
                        android:textAlignment="textStart"
                        android:textColor="@color/dark_blue"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/button_naranja"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/rounded_checkbox"
                        android:drawableEnd="@drawable/icon_checked"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/naranja"
                        android:textAlignment="textStart"
                        android:textColor="@color/dark_blue"
                        android:textSize="15sp"
                        android:textStyle="normal"

                        tools:ignore="RtlCompat" />
                    <Button
                        android:id="@+id/button_blanco"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"

                        android:background="@drawable/rounded_checkbox"
                        android:drawableEnd="@drawable/icon_checked"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/blanco"
                        android:textAlignment="textStart"
                        android:textColor="@color/dark_blue"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/button_cyan"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rounded_checkbox"
                        android:drawableEnd="@drawable/icon_checked"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/cyan"
                        android:textAlignment="textStart"
                        android:textColor="@color/dark_blue"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        tools:ignore="RtlCompat" />

                </LinearLayout>
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekbar_stroop"
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:indeterminate="false"
                android:tickMark="@drawable/tickbar_enabled"
                android:progressDrawable="@drawable/seekbar_multichoice"
                android:thumb="@drawable/thumb"/>
            <TextView
                android:id="@+id/modalidad_stroop"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:text="@string/congruente"
                android:textSize="20sp"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/poppins_light"
                android:layout_height="wrap_content">
            </TextView>

            <SeekBar
                android:id="@+id/seekbar_tiempo_stroop"
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:indeterminate="false"

                android:progressDrawable="@drawable/seekbar_multichoice"
                android:thumb="@drawable/thumb"/>
            <TextView
                android:id="@+id/tiempo_stroop"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:text="Tiempo de refresco: 1s"
                android:textSize="20sp"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/poppins_light"
                android:layout_height="wrap_content">
            </TextView>

            <SeekBar
                android:id="@+id/seekbar_numero_stroop"
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:indeterminate="false"

                android:progressDrawable="@drawable/seekbar_multichoice"
                android:thumb="@drawable/thumb"/>
            <TextView
                android:id="@+id/numero_stroop"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:text="Numero de presentaciones: 1"
                android:textSize="20sp"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/poppins_light"
                android:layout_height="wrap_content">
            </TextView>

            <Button
                android:id="@+id/button_fondo"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_checkbox"
                android:drawableEnd="@drawable/icon_unchecked"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:text="@string/fondo"
                android:textAlignment="textStart"
                android:textColor="@color/dark_blue"
                android:textSize="20sp"
                android:textStyle="normal"
                tools:ignore="RtlCompat" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/lineaGris"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line_grey"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal" />

    <Button
        android:id="@+id/buttonSiguiente"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button"
        android:fontFamily="@font/poppins_bold"
        android:fontWeight="400"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/iniciar"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal" />

</RelativeLayout>